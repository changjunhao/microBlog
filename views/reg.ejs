<form class="form-horizontal" role="form" method="post">
    <fieldset>
        <legend>用户注册</legend>
        <div class="form-group">
            <label class="col-md-1 control-label" for="username">用户名</label>
            <div class="col-md-3">
                <input class="form-control" type="text" id="username" name="username" placeholder="你的账号名称，用于登录和显示">
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-1 control-label" for="password">口令</label>
            <div class="col-md-3">
                <input class="form-control" type="password" id="password" name="password">
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-1 control-label" for="password-repeat">重复输入口令</label>
            <div class="col-md-3">
                <input class="form-control" type="password" id="password-repeat" name="password-repeat">
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-1 col-md-1">
                <button type="submit" class="btn btn-primary">注册</button>
            </div>
        </div>
    </fieldset>
</form>